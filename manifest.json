{
    "manifest_version": 2,
    "name": "Kar-m3u8",
    "version": "0.0.1",

    "description": "Tool for discovering m3u8 file requests",
    "icons": {"128": "images/kar128.png"},

    "browser_action":{
        "default_icon": {"128": "images/kar128.png"},
        "default_title": "Kar-m3u8",   
        "default_popup": "scripts/htmlFiles/popup.html"        
    },
    
    "author": "RAYCEKAR",
    "background": {
        "persistant": false,
        "scripts": ["scripts/jsFiles/background.js"]
    }
    
    "permissions": [
        "tabs",
        "http://*/"
    ]
    
}